<vbox width="270" height="170">
    <style>
        .working-indicator {
            background-color: white;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid $normal-border-color;
            filter: drop-shadow(1, 45, #000000, 0.2, 30, 2, 1, 3, false);
            padding-bottom: 10px;
        }
    </style>
    <box height="100%" width="100%">
        <image id="statusImage" width="100" height="100" resource="icons/Double Ring-1.6s-100px.gif" horizontalAlign="center" verticalAlign="center" />
    </box>
    <vbox horizontalAlign="center">
        <label id="messageLabel" style="_font-size: 14px;color:#888888;" />
        <button id="closeButton" text="Close" horizontalAlign="center" hidden="true" />
    </vbox>
</vbox>