    <style>
        .bottom-buttons  {
        }

        .bottom-buttons .button {
            background-color: #eeeeee;
            border: none;
            border-radius:0px;
        }

        .bottom-buttons .button:hover {
            background-color: #f5f5f5;
        }

        .bottom-buttons .button:down {
            background-color: #d2d2d2;
        }
