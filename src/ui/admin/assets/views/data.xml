<vbox width="100%" height="100%">
    <hbox width="100%" height="100%">
        <vbox width="200" height="100%" style="spacing:0;border-right: 1px solid #ababab;">
            <vbox  width="100%" style="padding:7px;background-color: #eeeeee;__padding-right: 1px;border-bottom:1px solid #ababab;border-right:1px solid #ababab">
                <dropdown id="databaseSelector" width="100%" />
                <textfield placeholder="Filter data sources" width="100%" />
            </vbox>
            <listview id="tableSelector" styleName="left-menu" width="100%" height="100%" selectedIndex="0">
                <item-renderer width="100%" layoutName="horizontal">
                    <image id="icon" verticalAlign="center" />
                    <label width="100%" id="name" verticalAlign="center" />
                    <label id="rows" verticalAlign="center" style="color: #888888;background-color:#dfdfdf;border-radius: 6px;padding: 2px 4px;" />
                </item-renderer>
            </listview>
            <hbox width="100%" height="67" style="padding:0px;spacing:0px;border-right: 1px solid #ababab;border-top: 1px solid #ababab;padding-right:1px;padding-top: 1px;border-bottom:1px solid #ababab;padding-bottom:1px;" styleName="bottom-buttons">
                <button id="addDataButton" text="Add" width="33%" height="100%" icon="icons/icons8-plus-+-32.png" iconPosition="top" />
                <component width="1" height="100%" style="background-color: #ababab" />
                <button text="Update" width="34%" height="100%" icon="icons/icons8-edit-32(1).png" iconPosition="top" />
                <component width="1" height="100%" style="background-color: #ababab" />
                <button id="removeDataButton" text="Remove" width="33%" height="100%" icon="icons/icons8-delete-32.png" iconPosition="top" />
            </hbox>
        </vbox>    

        <vbox id="detailsContainer" width="100%" height="100%" style="padding: 10px;">

            <frame text="Test Graph" hidden="false">
                <hbox>
                    <bar-graph width="400" height="200" id="testbargraph1" sort="desc" />
                    <vbox>
                        <hbox>
                            <dropdown id="testFieldsList" width="100" />
                            <button id="testRefreshFields" text="Refresh Fields" />
                        </hbox>    
                        <button text="Refresh Data" id="test1" />
                        <label text="" id="testPerf" />
                    </vbox>
                </hbox>    
            </frame>

            <tableview id="dataSourceDataTable" width="100%" height="100%" virtual="true" />

            <hbox width="100%" horizontalAlign="right">
                <label text="Showing 1 to 1000 of 10000" width="100%" verticalAlign="center" />
                <button text="First" />
                <button text="Prev" />
                <button text="Next" />
                <button text="Last" />
            </hbox>
        </vbox>
    </hbox>
</vbox>