<hbox width="100%" height="100%" style="spacing: 20px;">
    <vsplitter width="100%" height="100%" style="spacing: 10px;">
        <hsplitter width="100%" height="70%" style="spacing: 10px;">
            <portlet width="50%" height="100%" type="chart-bar" title="DR 2.1 - Completed Visits">
                <data>
                    <source database="ClintexPrimaryData"
                            table="ICP 1 Data - Patient Visits"
                            transform="group-by('Investigator Site')"
                            axisX="Investigator Site"
                            axisY="Number Completed Visits"
                            colorCalculator="threshold:60" />
                </data>
            </portlet>
            <portlet width="50%" height="100%" type="chart-bar" title="DR 2.2 - Actual vs Completed Visits">
                <data>
                    <source database="ClintexPrimaryData"
                            table="ICP 1 Data - Patient Visits"
                            transform="group-by('Investigator Site')"
                            axisX="Investigator Site"
                            axisY="Expected Number of Visits,Actual Number of Visits"
                            markerFunction="test" />
                </data>
            </portlet>
        </hsplitter>

        <portlet width="100%" height="30%" type="table" border="false">
                <data>
                    <source database="ClintexPrimaryData"
                            table="ICP 1 Data - Patient Visits" />
                </data>
        </portlet>
    </vsplitter>    

    <vbox style="spacing: 20px;" height="100%">
        <image resource="icons/clintex-logo-icon.png" horizontalAlign="center" />
        <card>
            <vbox width="200" style="spacing:20px">
                <portlet width="100%" type="filter-expandable" title="Site Id" titleAlign="right" border="false">
                    <data>
                        <source database="ClintexPrimaryData"
                                table="ICP 1 Data - Patient Visits"
                                transform="unique('Investigator Site')" />
                    </data>            
                </portlet>
                <portlet width="100%" type="filter-expandable" title="Subject Id" titleAlign="right" border="false">
                    <data>
                        <source database="ClintexPrimaryData"
                                table="ICP 1 Data - Patient Visits"
                                transform="unique('Patient Number')" />
                    </data>            
                </portlet>
            </vbox>
        </card>  
        <box height="100%">
            <vbox verticalAlign="bottom">
                <label text="Dashboard Links:" />
                <link text="Study Performance" style="margin-left: 16px;" />
                <link text="Data Management" style="margin-left: 16px;" />
                <link text="Site Monitoring" style="margin-left: 16px;" />
                <spacer height="40" />
                <image resource="icons/clintex-logo-all.png" horizontalAlign="center" width="230" height="28" />   
            </vbox> 
        </box>    
    </vbox>  

</hbox>