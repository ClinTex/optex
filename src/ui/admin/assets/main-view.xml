<vbox width="100%" height="100%" style="padding:0px;spacing:0px;" styleName="default-background">
    <menu-bar id="mainMenu" width="100%">
        <label text="Admin" verticalAlign="center" />
        <spacer width="100%" />
        <button text="Logout" />
    </menu-bar>


    <hbox width="100%" height="100%">
        <vbox id="mainContent" width="100%" height="100%">
            <stack id="mainStack" width="100%" height="100%">
                <data-view id="dataView" />
                <dashboards-view id="dashboardsView" />
                <portlets-view id="portletsView" />
                <settings-view id="settingsView" />
            </stack>
        </vbox>

        <button-bar direction="vertical" height="100%" selectedIndex="0" styleName="right-menu with-bottom-button" style="margin-top: -1px" onchange="mainStack.selectedId = this.selectedButton.userData">
            <button text="Data" userData="dataView" icon="icons/icons8-database-48.png" />
            <button text="Dashboards" userData="dashboardsView" icon="icons/icons8-virtual-machine-48.png" />
            <button text="Portlets" userData="portletsView" icon="icons/icons8-layout-48.png" />
            <spacer height="100%" />
            <button text="Settings" userData="settingsView" icon="icons/icons8-settings-48.png" />
        </button-bar>
    </hbox>
</vbox>