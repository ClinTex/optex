<vbox width="100%" height="100%" styleName="default-background-solid" style="spacing:0;">
    <style>
        .portlet.no-border {
            filter: none;
            border: none;
            border-radius: 0;
            padding: 0;
        }
    </style>

    <menu-bar id="mainMenu" width="100%">
        <spacer width="100%" />
        <label text="Light Mode" verticalAlign="center" />
        <switch onchange="this.selected ? haxe.ui.Toolkit.theme='default' : haxe.ui.Toolkit.theme='dark';" />
    </menu-bar>

    <hbox width="100%" height="100%">
        <button-bar id="dashboardSelector" direction="vertical" height="100%" selectedIndex="0" styleName="left-menu" style="margin-top: -1px">
        </button-bar>

        <vbox width="100%" height="100%" style="padding: 15px;">
            <dashboard-instance id="dashboardInstance"  width="100%" height="100%" />
        </vbox>
    </hbox>
</vbox>